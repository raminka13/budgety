<p style="color: green"><%= notice %></p>
<% if can? :manage, @category %>
  <%= render @category %>

  <%= link_to "New expense", new_category_expense_path(@category, @expense) %>
  <div id="expenses">
    <%= render @expenses %>
  </div>

  <div>
    <%= link_to "Edit this category", edit_category_path(@category) %> |
    <%= link_to "Back to categories", categories_path %>
    <%= button_to "Destroy this category", @category, method: :delete %>
  </div>
<% else %>
<h2>Not your CATEGORY. Go Back.</h2>
<% end %>
